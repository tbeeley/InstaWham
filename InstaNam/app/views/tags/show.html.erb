<h1>Posts tagged with <%= @tag.text %></h1>


<% @tag.posts.each do |post| %>
    <h3><%= post.title %></h3>

  <% if post.picture.present? %>
    <%= image_tag post.picture.url, class: 'uploaded-pic' %>
  <% end %>

  <% post.tags.each do |tag| %>
  <%= link_to tag.text, tag %>
  <% end %>
<% end %>