  <h1><%= post.title %></h1>
  <h4><%= post.price %></h4>
  <%= link_to "Pay", new_post_charge_path(post) %>

  <% if post.picture.present? %>
    <%= image_tag post.picture.url(:medium), class: 'uploaded-pic' %>
  <% end %>

  <% post.tags.each do |tag| %>
  <br><%= link_to tag.text, tag %></br>
  <% end %>